<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue très simple pour ajouter le champ planned_date_begin -->
    <record id="view_task_form_planned_date_field" model="ir.ui.view">
        <field name="name">project.task.form.planned.date.field</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <field name="date_deadline" position="before">
                <field name="planned_date_begin" string="Date de début" widget="datetime"/>
            </field>
        </field>
    </record>

    <!-- Vue pour ajouter le champ dans la liste -->
    <record id="view_task_tree_planned_date_field" model="ir.ui.view">
        <field name="name">project.task.tree.planned.date.field</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="planned_date_begin" optional="show"/>
            </field>
        </field>
    </record>
</odoo> 