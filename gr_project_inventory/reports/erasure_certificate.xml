<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- QWeb template for the Erasure Certificate Report (Odoo 17 best practices)
       - Wrapped in <odoo> for data loading
  -->
  <template id="report_erasure_certificate" t-name="gr_project_inventory.report_erasure_certificate">
  <t t-call="web.external_layout">
    <main class="page">
      <h2>Certificat d’effacement – Lot <t t-esc="lot_name"/></h2>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Type</th>
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Disk Size</th>
            <th>Disk Model</th>
            <th>Serial</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <t t-foreach="rows" t-as="row">
            <tr>
              <td><t t-esc="row.get('ProductType', '-')"/></td>
              <td><t t-esc="row.get('Manufacturer', '-')"/></td>
              <td><t t-esc="row.get('Model', '-')"/></td>
              <td><t t-esc="row.get('hd_size', '-')"/></td>
              <td><t t-esc="row.get('hd_model', '-')"/></td>
              <td><t t-esc="row.get('hd_sn', '-')"/></td>
              <td><t t-esc="row.get('ts', '-')"/></td>
            </tr>
          </t>
        </tbody>
      </table>
    </main>
  </t>
  </template>
</odoo>
